<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="pwa_connector" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Catalog GraphQl</label>
            <tab>tigren</tab>
            <resource>Tigren_CatalogGraphQl::catalog_config</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>General</label>
                <field id="full_url" type="select" translate="label" sortOrder="5" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Show Image Product Full Path</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="feature_product" type="textarea" translate="label" sortOrder="0" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Feature Products Condition</label>
                </field>
                <field id="show_new" type="select" translate="label" sortOrder="5" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Show New Products</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="show_feature" type="select" translate="label" sortOrder="10" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Show Feature Products</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="show_bestseller" type="select" translate="label" sortOrder="15" showInDefault="1"
                       showInWebsite="1"
                       showInStore="1">
                    <label>Show Best Seller Products</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>

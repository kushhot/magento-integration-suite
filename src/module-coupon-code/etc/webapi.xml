<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/carts/mine/coupon-apply" method="POST">
        <service class="Tigren\CouponCode\Api\CouponApplyInterface" method="submit"/>
        <resources>
            <resource ref="self" />
        </resources>
        <data>
            <parameter name="cartId" force="true">%cart_id%</parameter>
        </data>
    </route>
    <route url="/V1/guest-carts/:cartId/coupon-apply" method="POST">
        <service class="Tigren\CouponCode\Api\GuestCouponApplyInterface" method="submit"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/paypal-express/paypal-authorization" method="POST">
        <service class="Tigren\PaypalExpress\Api\OnAuthorizationInterface" method="authorization"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/paypal-express/get-token" method="POST">
        <service class="Tigren\PaypalExpress\Api\GetTokenDataInterface" method="getTokenData"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
